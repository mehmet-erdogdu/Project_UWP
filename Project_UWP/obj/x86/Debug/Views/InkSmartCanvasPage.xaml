<Page x:ConnectionId='1'
    x:Class="Project_UWP.Views.InkSmartCanvasPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Style="{StaticResource PageStyle}"
    mc:Ignorable="d">
    <Grid x:ConnectionId='2'
        x:Name="ContentArea"
        Margin="{StaticResource MediumLeftRightMargin}">
        <Grid
            Background="{ThemeResource SystemControlPageBackgroundChromeLowBrush}">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <CommandBar
                DefaultLabelPosition="Collapsed"
                HorizontalAlignment="Left"
                HorizontalContentAlignment="Left">
                <CommandBar.Content>                    
                    <InkToolbar x:ConnectionId='7' x:Name="toolbar"                                     >
                        <InkToolbarCustomToolButton x:ConnectionId='8'
                            x:Uid="InkSmartCanvas_LassoSelectionButton"
                            Name="lassoSelectionButton"
                                                            
                                                                >
                            <FontIcon
                                FontFamily="{ThemeResource SymbolThemeFontFamily}"
                                Glyph="&#xEF20;" />
                        </InkToolbarCustomToolButton>
                        <InkToolbarCustomToggleButton x:ConnectionId='9'
                            x:Uid="InkSmartCanvas_TouchInkingButton"
                            Name="touchInkingButton"
                                                         
                                                             >
                            <FontIcon
                                FontFamily="{ThemeResource SymbolThemeFontFamily}"
                                Glyph="&#xED5F;" />
                        </InkToolbarCustomToggleButton>
                        <InkToolbarCustomToggleButton x:ConnectionId='10'
                            x:Uid="InkSmartCanvas_MouseInkingButton"
                            Name="mouseInkingButton"
                                                         
                                                             >
                            <FontIcon
                                FontFamily="{ThemeResource SymbolThemeFontFamily}"
                                Glyph="&#xE962;" />
                        </InkToolbarCustomToggleButton>
                        <InkToolbarCustomToggleButton x:ConnectionId='11'
                            x:Uid="InkSmartCanvas_PenInkingButton"                            
                            Name="penInkingButton"
                                                       
                                                           >
                            <FontIcon
                                FontFamily="{ThemeResource SymbolThemeFontFamily}"
                                Glyph="&#xEDC6;" />
                        </InkToolbarCustomToggleButton>
                    </InkToolbar>
                </CommandBar.Content>
                <AppBarSeparator />
                <AppBarButton x:ConnectionId='12'
                    Name="UndoButton"
                    BorderBrush="Transparent"
                    BorderThickness="0,0,0,0"
                    x:Uid="InkSmartCanvas_UndoButton"
                    Icon="Undo"
                                      />
                <AppBarButton x:ConnectionId='13'
                    Name="RedoButton"
                    BorderBrush="Transparent"
                    BorderThickness="0,0,0,0"
                    x:Uid="InkSmartCanvas_RedoButton"
                    Icon="Redo"
                                      />
                <AppBarSeparator/>
                <AppBarButton x:ConnectionId='14'
                    BorderBrush="Transparent"
                    BorderThickness="0,0,0,0"
                    x:Uid="InkSmartCanvas_LoadInkFileButton"
                    Icon="OpenFile"
                                             />                   
                <AppBarButton x:ConnectionId='15'
                    Name="SaveInkFileButton"
                    BorderBrush="Transparent"
                    BorderThickness="0,0,0,0"
                    x:Uid="InkSmartCanvas_SaveInkFileButton"
                    Icon="Save"
                                             />
                <AppBarSeparator/>
                <AppBarButton x:ConnectionId='16'
                    Name="TransformTextAndShapesButton"
                    BorderBrush="Transparent"
                    BorderThickness="0,0,0,0"
                    x:Uid="InkSmartCanvas_TransformTextAndShapesButton"
                                                       >
                    <FontIcon
                        FontFamily="{ThemeResource SymbolThemeFontFamily}"
                        Glyph="&#xEA80;" />
                </AppBarButton>
                <AppBarSeparator/>
                <AppBarButton x:ConnectionId='17'
                    Name="ClearAllButton"
                    BorderBrush="Transparent"
                    BorderThickness="0,0,0,0"
                    x:Uid="InkSmartCanvas_ClearAllButton"
                    Icon="Delete"
                                          />
            </CommandBar>
            <ScrollViewer x:ConnectionId='3'
                Name="canvasScroll"
                Grid.Row="1"
                Margin="8,0,8,0"
                ScrollViewer.VerticalScrollBarVisibility="Auto"
                ScrollViewer.HorizontalScrollBarVisibility="Auto"
                ZoomMode="Enabled">
                <Grid Background="{StaticResource InkCanvasBackground}"
                      Width="{Binding ElementName=inkCanvas, Path=Width}"
                      Height="{Binding ElementName=inkCanvas, Path=Height}">
                    <InkCanvas x:ConnectionId='4' x:Name="inkCanvas"
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Stretch"/>
                    <Canvas x:ConnectionId='5' x:Name="drawingCanvas"
                            Width="{Binding ElementName=inkCanvas, Path=Width}"
                            Height="{Binding ElementName=inkCanvas, Path=Height}"/>
                    <Canvas x:ConnectionId='6' x:Name="selectionCanvas"
                            Width="{Binding ElementName=inkCanvas, Path=Width}"
                            Height="{Binding ElementName=inkCanvas, Path=Height}"/>
                </Grid>
            </ScrollViewer>
        </Grid>
    </Grid>
</Page>

