<Page x:ConnectionId='1'
    x:Class="Project_UWP.Views.InkDrawPicturePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Style="{StaticResource PageStyle}"
    mc:Ignorable="d">
    <Grid x:ConnectionId='2'
        x:Name="ContentArea"
        Margin="{StaticResource MediumLeftRightMargin}">
        <Grid
            Background="{ThemeResource SystemControlPageBackgroundChromeLowBrush}">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <CommandBar
                DefaultLabelPosition="Collapsed"
                HorizontalAlignment="Left"
                HorizontalContentAlignment="Left">
                <CommandBar.Content>
                    <InkToolbar x:ConnectionId='6' x:Name="toolbar"                                     >
                        <InkToolbarCustomToggleButton x:ConnectionId='7'
                            x:Uid="InkDrawPicture_TouchInkingButton"
                            Name="touchInkingButton"
                                                         
                                                             >
                            <FontIcon
                                FontFamily="{ThemeResource SymbolThemeFontFamily}"
                                Glyph="&#xED5F;" />
                        </InkToolbarCustomToggleButton>
                        <InkToolbarCustomToggleButton x:ConnectionId='8'
                            x:Uid="InkDrawPicture_MouseInkingButton"                            
                            Name="mouseInkingButton"
                                                         
                                                             >
                            <FontIcon
                            FontFamily="{ThemeResource SymbolThemeFontFamily}"
                            Glyph="&#xE962;" />
                        </InkToolbarCustomToggleButton>
                    </InkToolbar>
                </CommandBar.Content>
                <AppBarSeparator />
                <AppBarButton x:ConnectionId='9'
                    BorderBrush="Transparent"
                    BorderThickness="0,0,0,0"
                    x:Uid="InkDrawPicture_ZoomInButton"
                    Icon="ZoomIn"
                                        />
                <AppBarButton x:ConnectionId='10'
                    BorderBrush="Transparent"
                    BorderThickness="0,0,0,0"
                    x:Uid="InkDrawPicture_ZoomOutButton"
                    Icon="ZoomOut"
                                          />
                <AppBarButton x:ConnectionId='11'
                BorderBrush="Transparent"
                BorderThickness="0,0,0,0"
                x:Uid="InkDrawPicture_OriginalSizeButton"
                Icon="FullScreen"
                                        />
                <AppBarButton x:ConnectionId='12'
                BorderBrush="Transparent"
                BorderThickness="0,0,0,0"
                x:Uid="InkDrawPicture_FitToScreenButton"                    
                                         >
                    <FontIcon
                    FontFamily="{ThemeResource SymbolThemeFontFamily}"
                    Glyph="&#xE73F;" />
                </AppBarButton>
                <AppBarSeparator/>
                <AppBarButton x:ConnectionId='13'
                BorderBrush="Transparent"
                BorderThickness="0,0,0,0"
                x:Uid="InkDrawPicture_OpenImageButton"                
                                       >
                <FontIcon
                    FontFamily="{ThemeResource SymbolThemeFontFamily}"
                    Glyph="&#xEB9F;" />
                </AppBarButton>
                <AppBarButton x:ConnectionId='14'
                Name="SaveImageButton"
                BorderBrush="Transparent"
                BorderThickness="0,0,0,0"
                x:Uid="InkDrawPicture_SaveImageButton"
                Icon="Save"
                                        />
                <AppBarSeparator/>
                <AppBarButton x:ConnectionId='15'
                Name="ClearAllButton"
                BorderBrush="Transparent"
                BorderThickness="0,0,0,0"
                x:Uid="InkDrawPicture_ClearAllButton"
                Icon="Delete"
                                       />
            </CommandBar>
            <ScrollViewer x:ConnectionId='3'
                Name="canvasScroll"
                Grid.Row="1"
                Margin="8,0,8,0"
                ScrollViewer.VerticalScrollBarVisibility="Auto"
                ScrollViewer.HorizontalScrollBarVisibility="Auto"
                ZoomMode="Enabled">
                <Grid Background="{StaticResource InkCanvasBackground}"
                      Width="{Binding ElementName=inkCanvas, Path=Width}"
                      Height="{Binding ElementName=inkCanvas, Path=Height}">
                    <Image x:ConnectionId='4' x:Name="image" Stretch="None"/>
                    <InkCanvas x:ConnectionId='5' x:Name="inkCanvas"
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Stretch"/>
                </Grid>
            </ScrollViewer>
        </Grid>
    </Grid>
</Page>

